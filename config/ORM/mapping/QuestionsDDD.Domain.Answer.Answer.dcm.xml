<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="QuestionsDDD\Domain\Answer\Answer" table="answers">
        <id name="id">
            <generator strategy="UUID"/>
        </id>
        <field name="position" column="position" type="integer" nullable="false"/>
        <field name="result" column="result" type="boolean" nullable="false"/>
        <field name="createdAt" column="created_at" type="datetime"/>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true"/>
        <many-to-one field="question" target-entity="QuestionsDDD\Domain\Question\Question">
            <join-column name="question_id" nullable="false" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>
        <one-to-many field="translations" target-entity="QuestionsDDD\Domain\Translation\AnswerTranslation\AnswerTranslation" mapped-by="translatable"/>
    </entity>
</doctrine-mapping>