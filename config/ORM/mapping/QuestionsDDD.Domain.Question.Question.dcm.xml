<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="QuestionsDDD\Domain\Question\Question" table="questions">
        <id name="id">
            <generator strategy="UUID"/>
        </id>
        <field name="createdAt" column="created_at" type="datetime"/>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true"/>
        <one-to-many field="translations" target-entity="QuestionsDDD\Domain\Translation\QuestionTranslation\QuestionTranslation" mapped-by="translatable"/>
        <one-to-many field="answers" target-entity="QuestionsDDD\Domain\Answer\Answer" mapped-by="question"/>
    </entity>
</doctrine-mapping>