<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="QuestionsDDD\Domain\Translation\AnswerTranslation\AnswerTranslation" table="answer_translations">
        <id name="id">
            <generator strategy="UUID"/>
        </id>
        <field name="text" column="text" type="string" length="255" nullable="false"/>
        <field name="createdAt" column="created_at" type="datetime"/>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true"/>
        <many-to-one field="language" target-entity="QuestionsDDD\Domain\Language\Language">
            <join-column name="language_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>
        <many-to-one field="translatable" target-entity="QuestionsDDD\Domain\Answer\Answer">
            <join-column name="answer_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>
    </entity>
</doctrine-mapping>